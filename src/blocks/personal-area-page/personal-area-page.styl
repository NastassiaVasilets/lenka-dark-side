.personal-area__wrapper
    width 100%
    height 100%
    background url(../images/firstPage/first-screen.png) no-repeat
    background-size cover

.tabs__caption
    background header
    background linear-gradient(to bottom, rgba(0, 0,0,0), header, rgba(0, 0,0,0)); 
    color #ffffff
    text-transform uppercase
    position relative
    height 38px
    line-height 38px
    width 100% 
    text-align center

.tabs__caption li
    display inline-block
    width 33.3%
    
.tabs__caption li.active
    font-weight bold

.tabs__content 
    display none
    min-height 400px
    position relative
    top 40px

.tabs__content.active 
    display block

.dept
    display inline-block
    position relative
    margin 40px 5% 0 8%
 
.history__title
    font-size 1.7em
    fint-weight bold
    text-align center
    color #fff
     
.history__owner
    position relative
    float left
    width 50%
    
.history__subscriber
    position relative
    margin-left 50%

.dept__my, .dept__me
    width 35%
    
@media screen and (max-width:1020px)
    .history__title
        font-size 1.4em

@media screen and (max-width:850px)
    .history__title
        font-size 1.2em
    .tabs__caption
        font-size 1em
        line-height 45px

@media screen and (max-width:730px)
    .history__title
        font-size 1.3em
        
    .history__owner
        width 80%
        float none
        
    .history__subscriber
        clean both
        width 80%
        margin-left 0
    
    .dept__me
        width 80%
        
    .dept__my
        width 80%
        
