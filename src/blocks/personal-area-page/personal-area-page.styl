.personal-area__wrapper
    width 100%
    height 100%
    background url(../images/firstPage/first-screen.png) no-repeat
    background-size cover

.tabs__caption
    background header
    background linear-gradient(to bottom, rgba(0, 0,0,0), header, rgba(0, 0,0,0)); 
    color #ffffff
    text-transform uppercase
    position relative
    height 38px
    line-height 38px
    width 100% 
    text-align center

.tabs__caption li
    display inline-block
    width 33.3%
    
.tabs__caption li.active
    font-weight bold

.tabs__content 
    display none
    min-height 400px
    position relative
    top 40px

.tabs__content.active 
    display block

.dept
    display inline-block
    position relative
    margin 40px 5% 0 8%
    
.history__owner
    display inline-block
    position relative
    margin 40px 5% 0 12%
    
.history__subscriber
    display inline-block
    position relative
    margin 40px 5% 0 12%
    
