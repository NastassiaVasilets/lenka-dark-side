@import '../../stylus/vars.styl'
.main-page__wrapper
    width 100%
    height 100%
    background url(../images/firstPage/first-screen.png) no-repeat
    background-size cover
 
.main-page
    width 90%
    margin 0 auto
    padding 30px
    overflow hidden
    min-height 100%

.popup 
    padding 5px 15px 15px
    position fixed
    top 100px
    left 50%
    display none
    z-index 100
    
#overlay 
    width 100%
    height 100%
    position fixed
    top 0
    left 0
    display none
    background #000
    opacity .8
