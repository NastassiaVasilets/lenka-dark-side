@import '../../stylus/vars.styl'

.header
  width 100%
  height 90px
  font-family main-font
  background header
  background linear-gradient(to bottom, header, rgba(0, 0,0,0)); 
  position relative
  //border-bottom 3px solid buttons

.header__logo
  width 90px
  height 90px
  background url(../images/food.svg) no-repeat
  background-size contain
  position: absolute
  left 30px
  top: 0

.header__slogan
  width 200px
  height 80px
  display inline-block
  background url(../images/title1.png) no-repeat
  margin-left 97px
  margin-right 400px
  position relative

.header__bell
  position: absolute
  width: 50px
  right:0
  top:0
    
.header__button
  position relative
  top -30px


