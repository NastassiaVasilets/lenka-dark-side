@import '../../stylus/vars.styl'

.basket
  width 100%
  background #fff

.basket__title
  background-color header-basket
  text-align center
  padding 10px 0
  color #fff

.orders
  display table
  width 100%

.basket__allcost
  width 248px
  height 35px
  margin auto
  text-align center
  white-space normal

.basket__hr
  width 75%
  margin 0 auto

.basket__image
  width 60px
  height 65px
  margin 0 auto
  background url(../../images/cart/food.svg) 0 no-repeat

.basket__button
  margin auto
  width 147px
